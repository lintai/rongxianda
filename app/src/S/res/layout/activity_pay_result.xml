<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pay_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="支付成功"
        android:textSize="68dp"
        android:textStyle="bold"
        android:textColor="#fed426"/>


    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="33dp"
        android:textColor="#233333"/>

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="总共n件商品"
            android:textSize="33dp"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价："
                android:textSize="33dp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text=""
                android:textSize="33dp"
                android:textColor="#333333"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折后："
                android:textSize="33dp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textSize="33dp"
                android:textColor="#ff0000"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="完 成"
        android:textSize="33dp"
        android:textColor="@color/color_white"
        android:background="@drawable/goods_choose_pay_way_next_rectangle_bg"/>

    <LinearLayout
        android:id="@+id/layout_pay_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="102dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="上一步"
            android:textSize="33dp"
            android:textColor="@drawable/goods_choose_pay_way_text_color_selector"
            android:background="@drawable/goods_choose_pay_way_selector"/>

        <TextView
            android:id="@+id/tv_cancel_pay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="结 算"
            android:textSize="33dp"
            android:textColor="@drawable/goods_choose_pay_way_text_color_selector"
            android:background="@drawable/goods_choose_pay_way_selector"/>

    </LinearLayout>

</LinearLayout>
